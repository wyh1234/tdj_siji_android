<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#f5f5f5"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="38dp"
                android:src="@mipmap/fanhui"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_centerVertical="true"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2019-11-16核货"
                    android:layout_centerVertical="true"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_toRightOf="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp" />

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="@drawable/search_text3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginRight="10dp"
                android:text="问题汇总"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.tdj_sj_webandroid.utils.tablayout.WTabLayout
        android:id="@+id/wtab"
        android:layout_below="@+id/rl_seach"
        android:layout_width="match_parent"
        app:xTabIndicatorColor="@color/text_visible"
        app:xTabIndicatorHeight="2dp"
        app:xTabMode="scrollable"
        app:xTabPaddingEnd="5dp"
        app:xTabSelectedTextColor="@color/text_visible"
        app:xTabTextColor="@color/text_gone"
        app:xTabTextSize="16sp"
        android:layout_height="35dp">

    </com.tdj_sj_webandroid.utils.tablayout.WTabLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/text_visible_one"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_stationName"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textColor="@color/text_gonees"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_driverNo"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="16sp"
            android:textColor="@color/text_gonees"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>