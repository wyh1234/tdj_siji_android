<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <View
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#f5f5f5"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="38dp"
                android:src="@mipmap/fanhui"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_centerVertical="true"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="蓝牙列表"
                    android:layout_centerVertical="true"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索蓝牙设备"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_nodevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="无可连接设备"
        android:textColor="@color/bg1"
        android:textSize="20sp"
        android:visibility="gone" />

    <!-- <EditTextandroid:layout_width="match_parent"android:layout_height="wrap_content"android:lines="5"/><Buttonandroid:layout_width="match_parent"android:layout_height="wrap_content"android:onClick="disconnect"android:layout_gravity="bottom"android:text="断开连接"/><Buttonandroid:layout_width="match_parent"android:layout_height="wrap_content"android:onClick="sound"android:text="声音"/><Buttonandroid:layout_width="match_parent"android:layout_height="wrap_content"android:onClick="light"android:text="灯光"/><Buttonandroid:layout_width="match_parent"android:layout_height="wrap_content"android:onClick="shock"android:text="震动"/><Buttonandroid:layout_width="match_parent"android:layout_height="wrap_content"android:onClick="read"android:text="读"/> -->


</LinearLayout>