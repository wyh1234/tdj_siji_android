<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#f5f5f5"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="38dp"
                android:src="@mipmap/fanhui"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_centerVertical="true"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_qx"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="取消核货"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="#fc1819"
                android:textSize="12sp" />
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="核货"
                    android:layout_centerVertical="true"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_toRightOf="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textColor="#1A1A1A"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_isD"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#FF0404"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新"
            android:id="@+id/tv_isFirst"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/news_red"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_customerId"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:background="@drawable/news"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:id="@+id/tv_customerName"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_edit_group"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="@drawable/saoma_shap"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="请输入二维码"
                android:imeOptions="actionDone"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_clean"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/clean_pop"/>

        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/right_text"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="确定"
            android:textSize="17sp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/agreement_button"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="@color/bg2"
        android:layout_height="40dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="子订单数(总票数)"
                android:textColor="#333333"
                android:layout_height="25dp" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_all"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:layout_height="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/line1"
                android:visibility="gone"
                android:background="#3B9BFF"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_unStock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="待核货数(票数)"
            android:textColor="#FF0404"
            android:layout_height="25dp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_unStock"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:textColor="#FF0404"
                    android:layout_height="25dp" />

<!--                <TextView-->
<!--                    android:id="@+id/tv_un"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:text="0"-->
<!--                    android:textColor="#FF0404"-->
<!--                    android:layout_height="25dp" />-->
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/line2"
                android:background="#3B9BFF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_inStock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="已核货数(票数)"
            android:textColor="#FF0404"
            android:layout_height="25dp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_inStock"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:textColor="#FF0404"
                    android:layout_height="25dp" />

<!--                <TextView-->
<!--                    android:id="@+id/tv_in"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:text="0"-->
<!--                    android:textColor="#FF0404"-->
<!--                    android:layout_height="25dp" />-->
            </LinearLayout>


            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/line3"
                android:background="#3B9BFF"/>
        </LinearLayout>


        <TextView
        android:visibility="gone"
        android:layout_weight="1"
        android:id="@+id/tv_num"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="已核货：0"
        android:textColor="#3b9bff"
        android:layout_height="50dp" />
        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/tv_num_s"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="未核货：0"
            android:textColor="#3b9bff"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:text="编号"
            android:background="#f2f7fd"
            android:textColor="#3b9bff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:text="商品名称"
            android:background="#f2f7fd"
            android:textColor="#3b9bff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:background="#f2f7fd"
            android:text="规格"
            android:textSize="12sp"
            android:textColor="#3b9bff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_weight="1"
            android:textSize="12sp"
            android:background="#f2f7fd"
            android:text="数量"
            android:gravity="center"
            android:textColor="#3b9bff"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#f6f6f6"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rk_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>